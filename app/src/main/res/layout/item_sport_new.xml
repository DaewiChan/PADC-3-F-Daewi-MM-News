<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sport_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_sport_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_sport_fire"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/fire" />

        <TextView
            android:id="@+id/tv_spot_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@id/iv_sport_fire"
            android:layout_toRightOf="@id/iv_sport_fire"
            android:text="Top  News"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_real_madrid"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/iv_sport_fire"
            android:scaleType="fitXY"
            android:src="@drawable/real_madrid" />

        <TextView
            android:id="@+id/tv_sport_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_real_madrid"
            android:layout_margin="12dp"
            android:text="@string/sport_news"
            android:textColor="#000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_football"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_below="@id/tv_sport_news"
            android:layout_marginLeft="12dp"
            android:src="@drawable/football" />

        <TextView
            android:id="@+id/tv_one_football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_sport_news"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/iv_football"
            android:layout_toRightOf="@id/iv_football"
            android:text="Onefootball"
            android:textColor="#000"
            android:textSize="16sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>